<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_bg" />

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        app:layout_constraintVertical_weight="181"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_icon"
        android:layout_height="0dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        app:layout_constraintVertical_weight="102"
        android:layout_height="0dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintVertical_weight="31"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"
        app:layout_constraintBottom_toTopOf="@id/view_bottom"
        android:textSize="@dimen/dp_26_67"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="342"
        android:layout_height="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>