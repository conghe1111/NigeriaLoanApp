<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_14"
            android:src="@drawable/ic_five_star"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_height="@dimen/dp_14"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_stage_1"
            android:text="@string/stage_x_x"
            android:layout_width="wrap_content"
            android:textColor="#75D7A1"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_5"
            android:textSize="@dimen/sp_14"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="@string/repayment_date"
            android:textColor="#333333"
            android:layout_marginStart="@dimen/dp_21"
            android:textSize="@dimen/sp_14"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repayment_1"
            android:layout_width="0dp"
            android:text="@string/repayment_date"
            android:textColor="#333333"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/sp_14"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:textColor="#F77575"
        android:layout_marginTop="@dimen/dp_6"
        android:textSize="@dimen/sp_14"
        android:text="@string/early_repay_will"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_repayment_date"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_height="@dimen/dp_90"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="@string/repayment_amount"
            android:textColor="#333333"
            android:layout_marginStart="@dimen/dp_21"
            android:textSize="@dimen/sp_14"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_repayment_amount"
            android:layout_width="0dp"
            android:text="₦5,702.00"
            android:textColor="#333333"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_gravity="center_vertical|end"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/sp_14"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_11"
        android:orientation="vertical"
        android:background="@drawable/bg_stage_bg_1"
        android:layout_marginHorizontal="@dimen/dp_22"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/loan_amount"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_loan_amount"
                android:layout_width="0dp"
                android:text="₦5,702.00"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/interest"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_interest"
                android:layout_width="0dp"
                android:text="₦5,702.00"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_11"
        android:orientation="vertical"
        android:background="@drawable/bg_stage_bg_1"
        android:layout_marginHorizontal="@dimen/dp_22"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/disbursal_amount"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_disbural_amount"
                android:layout_width="0dp"
                android:text="₦5,702.00"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/service_fee"
                android:textColor="#333333"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_service_fee"
                android:layout_width="0dp"
                android:text="₦5,702.00"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>