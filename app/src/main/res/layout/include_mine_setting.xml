<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp_10"
    android:background="@drawable/bg_mine_setting_center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_setting_information"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/dp_17"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_13"
                android:src="@drawable/ic_mine_edit_infomation" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/setting_information_2"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:background="#67DBA3"
            android:layout_marginVertical="@dimen/dp_24"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll_setting_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/dp_17"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_13"
                android:src="@drawable/ic_mine_customer_service" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:text="@string/setting_customer_service_2"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:background="#67DBA3"
            android:layout_marginVertical="@dimen/dp_24"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll_setting_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/dp_17"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_13"
                android:src="@drawable/ic_mine_history_record" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/setting_history_record_2"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:background="#67DBA3"
            android:layout_marginVertical="@dimen/dp_24"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll_setting_privacy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="@dimen/dp_17"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_13"
                android:src="@drawable/ic_mine_notice_privacy" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/setting_privacy_2"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>