<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_setting_container"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/ll_setting_container"
        style="@style/setting_container">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_setting_left_icon"
            style="@style/setting_lef_icon"
            android:src="@drawable/ic_setting_info" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_setting_left_title"
            style="@style/setting_middle_text"
            android:text="@string/setting_information" />

        <androidx.appcompat.widget.AppCompatImageView
            style="@style/setting_right_arrow"
            android:src="@drawable/ic_setting_back_arrow" />
    </LinearLayout>

</FrameLayout>
