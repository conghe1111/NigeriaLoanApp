<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gray_bg"
    android:layout_height="@dimen/dp_48">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:hint="@string/enter_password"
        android:background="@null"
        android:lines="1"
        android:maxLength="6"
        android:maxLines="1"
        android:inputType="number"
        android:singleLine="true"
        android:password="true"
        android:layout_marginStart="@dimen/dp_20"
        android:textColorHint="#AFAFAF"
        android:textSize="@dimen/sp_14"
        android:layout_marginVertical="@dimen/dp_5"
        android:textCursorDrawable="@drawable/et_cursor_color"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|end"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_pwd_clear"
            android:layout_width="@dimen/dp_25"
            android:src="@drawable/iv_signin_clear"
            android:layout_gravity="center|end"
            android:padding="@dimen/dp_5"
            android:visibility="invisible"
            android:layout_height="@dimen/dp_21"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_pwd_mode"
            android:layout_width="@dimen/dp_25"
            android:src="@drawable/ic_pwd_mode"
            android:padding="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_height="@dimen/dp_21"/>


    </LinearLayout>


</FrameLayout>