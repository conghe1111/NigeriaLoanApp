<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/include_start"
        layout="@layout/include_edit_face_recognition_start"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/include_loading"
        layout="@layout/include_edit_face_recognition_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/include_error"
        layout="@layout/include_edit_face_recognition_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>