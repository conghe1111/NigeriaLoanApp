<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/bg_loan_2"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_start"
        layout="@layout/include_edit_face_recognition_start"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginVertical="@dimen/dp_10"
        android:visibility="gone"
        tools:visibility="gone"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/include_loading"
        layout="@layout/include_edit_face_recognition_loading"
        android:layout_width="match_parent"
        tools:visibility="gone"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/include_error"
        layout="@layout/include_edit_face_recognition_error"
        android:layout_width="match_parent"
        tools:visibility="visible"
        android:layout_height="match_parent" />

</FrameLayout>