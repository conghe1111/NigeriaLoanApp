<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fl_top"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="@dimen/dp_232">

        <include layout="@layout/include_main_top" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:layout_height="wrap_content">

          <androidx.appcompat.widget.AppCompatImageView
              android:layout_width="@dimen/dp_111"
              android:src="@drawable/ic_loan_verify"
              android:layout_gravity="center_horizontal"
              android:layout_height="@dimen/dp_100"/>

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:textColor="#666666"
              android:text="@string/under_review"
              android:textSize="@dimen/sp_16"
              android:includeFontPadding="false"
              android:textStyle="bold"
              android:layout_marginTop="@dimen/dp_4"
              android:layout_height="wrap_content"/>

      </LinearLayout>

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_verify_loan"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/fl_top"
        android:layout_marginTop="-40dp"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@drawable/bg_white_bg"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/we_are_currently_verifying"
        android:layout_height="@dimen/dp_80"/>

</androidx.constraintlayout.widget.ConstraintLayout>