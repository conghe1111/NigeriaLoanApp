<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/bg_loan_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp10"
        android:layout_marginVertical="@dimen/dp10"
        android:background="@drawable/bg_white_bg_10"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp18"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp34"
                    android:layout_marginStart="@dimen/dp14"
                    android:src="@drawable/ic_bank_info"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/dp29"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/bank_info"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp4"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <com.chocolate.nigerialoanapp.widget.InfoSelectView
                android:id="@+id/select_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp18"
                app:edit_view_title="@string/bank_name" />

            <com.chocolate.nigerialoanapp.widget.InfoEditView
                android:id="@+id/edit_bank_account_num"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp8"
                android:layout_height="wrap_content"
                app:edit_view_title="@string/bank_account_number" />

            <com.chocolate.nigerialoanapp.widget.InfoEditView
                android:id="@+id/edit_bank_account_num_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                app:edit_view_title="@string/confirm_bank_account_number" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginHorizontal="@dimen/dp20"
                android:textColor="#1A5B37"
                android:paddingStart="@dimen/dp17"
                android:paddingEnd="@dimen/dp17"
                android:textSize="@dimen/sp12"
                android:paddingTop="@dimen/dp10"
                android:includeFontPadding="false"
                android:text="@string/please_fill_correct_bank_account"
                android:paddingBottom="@dimen/dp10"
                android:background="@drawable/bg_bank_info"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_edit_bank_next"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/dp20"
                android:textSize="@dimen/sp16"
                android:textColor="#242424"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp13"
                android:text="@string/next"
                android:background="@drawable/selector_btn_theme"
                android:layout_height="@dimen/dp48"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bank_next_desc"
                android:layout_width="match_parent"
                android:text="@string/please_read_all"
                android:textSize="@dimen/sp14"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp45"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>