<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_68"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:text="@string/max_amount"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_loan_max_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:text="100000"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/dp_6"
            android:textStyle="bold"
            android:textSize="@dimen/sp_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_loan_apply_now"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:paddingStart="@dimen/dp_44"
            android:paddingEnd="@dimen/dp_44"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_13"
            android:text="@string/apply_now"
            android:background="@drawable/bg_btn_enable"
            android:layout_height="@dimen/dp_44"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:textColor="#333333"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dp_17"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp_17"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/high_loan_amount"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_home_1"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_34"
                    android:src="@drawable/ic_home_desc_1"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_height="@dimen/dp_34"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_1_desc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|end"
                    tools:text="10000 \n 20000"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/high_loan_amount"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_home_2"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_34"
                    android:src="@drawable/ic_home_desc_2"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_height="@dimen/dp_34"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_2_desc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_12"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|end"
                    tools:text="10000 \n 20000"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>