<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_51"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="@dimen/dp_6"
    android:layout_marginHorizontal="@dimen/dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_white_bg"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_17"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:src="@drawable/ic_loan_repayment" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:includeFontPadding="false"
            android:text="NGN"
            android:textStyle="bold"
            android:textSize="@dimen/sp_14" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_item_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="1000000"
                android:textStyle="bold"
                android:textColor="#216EE9"
                android:textSize="@dimen/sp_14" />

        </FrameLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_repayment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_38"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_decline_repayment"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp_10"
            android:paddingHorizontal="@dimen/dp_14"
            android:text="@string/repayment"
            android:textColor="#242424"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>



</androidx.cardview.widget.CardView>