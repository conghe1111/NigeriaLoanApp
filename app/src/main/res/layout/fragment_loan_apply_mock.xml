<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_loan_2"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp90"
        android:text="@string/app_name"
        android:textColor="#333333"
        android:textSize="@dimen/sp18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_margin_top"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp210"
            android:layout_height="@dimen/dp120"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_loan_verify" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/dp48"
            android:layout_marginTop="@dimen/dp4"
            android:includeFontPadding="false"
            android:text="@string/your_loan_application"
            android:textColor="#242424"
            android:textSize="@dimen/sp14" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_loan_apply_ok"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp48"
        android:layout_height="@dimen/dp44"
        android:layout_marginTop="@dimen/dp22"
        android:layout_marginBottom="@dimen/dp15"
        android:background="@drawable/bg_btn_enable_orange"
        android:gravity="center"
        android:text="OK"
        android:textColor="#242424"
        android:textStyle="bold"
        android:textSize="@dimen/sp14" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_count"
        android:text="10s"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textColor="#242424"
        android:textSize="@dimen/sp14"
        android:layout_height="wrap_content"/>
</LinearLayout>