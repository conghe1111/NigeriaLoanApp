<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_loan_2"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        layout="@layout/include_top_title"
        android:layout_height="@dimen/dp_54"/>

    <FrameLayout
        android:id="@+id/ll_basic_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@drawable/bg_status_desc">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/basic_information"
            android:textColor="#333333"
            android:textStyle="bold"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:drawableStart="@drawable/ic_edit_basic_1"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_basic_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_nor_button"
            android:gravity="center"
            android:paddingStart="@dimen/dp_32"
            android:paddingEnd="@dimen/dp_32"
            android:text="@string/edit"
            android:textStyle="bold"
            android:textColor="#242424"
            android:textSize="@dimen/sp_14" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/ll_work_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@drawable/bg_status_desc">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/work_information"
            android:textColor="#333333"
            android:textStyle="bold"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:drawableStart="@drawable/ic_edit_work_1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:textSize="@dimen/sp_15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_work_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_nor_button"
            android:gravity="center"
            android:paddingStart="@dimen/dp_32"
            android:paddingEnd="@dimen/dp_32"
            android:text="@string/edit"
            android:textStyle="bold"
            android:textColor="#242424"
            android:textSize="@dimen/sp_14" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/ll_contact_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@drawable/bg_status_desc">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/contact_information"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center"
            android:drawableStart="@drawable/ic_edit_contact_1"
            android:layout_marginStart="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/sp_15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_contact_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_nor_button"
            android:gravity="center"
            android:paddingStart="@dimen/dp_32"
            android:paddingEnd="@dimen/dp_32"
            android:text="@string/edit"
            android:textStyle="bold"
            android:textColor="#242424"
            android:textSize="@dimen/sp_14" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/ll_receive_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_66"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_19"
        android:background="@drawable/bg_status_desc">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/receive_account"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center"
            android:drawableStart="@drawable/ic_edit_receive_1"
            android:layout_marginStart="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/sp_15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_receive_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/bg_nor_button"
            android:gravity="center"
            android:paddingStart="@dimen/dp_32"
            android:paddingEnd="@dimen/dp_32"
            android:text="@string/edit"
            android:textStyle="bold"
            android:textColor="#242424"
            android:textSize="@dimen/sp_14" />

    </FrameLayout>

</LinearLayout>