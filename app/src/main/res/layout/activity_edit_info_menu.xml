<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_loan_2"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        layout="@layout/include_top_title"
        android:layout_height="@dimen/dp54"/>

    <LinearLayout
        android:id="@+id/ll_basic_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp66"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp18"
        android:layout_marginHorizontal="@dimen/dp20"
        android:background="@drawable/bg_status_desc">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp10"
            android:drawableStart="@drawable/ic_edit_basic_1"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center_vertical|start"
            app:autoSizeMaxTextSize="@dimen/sp15"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            android:text="@string/basic_information"
            android:textColor="#333333"
            android:textSize="@dimen/sp15"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_basic_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp36"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp20"
            android:background="@drawable/bg_nor_button"
            android:gravity="center"
            android:paddingStart="@dimen/dp32"
            android:paddingEnd="@dimen/dp32"
            android:text="@string/edit"
            android:textStyle="bold"
            android:textColor="#242424"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_work_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp66"
        android:layout_marginTop="@dimen/dp19"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dp20"
        android:background="@drawable/bg_status_desc">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/work_information"
            android:textColor="#333333"
            android:textStyle="bold"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center_vertical|start"
            app:autoSizeMaxTextSize="@dimen/sp15"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            android:drawableStart="@drawable/ic_edit_work_1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:textSize="@dimen/sp15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_work_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp36"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp20"
            android:background="@drawable/bg_nor_button"
            android:gravity="center"
            android:paddingStart="@dimen/dp32"
            android:paddingEnd="@dimen/dp32"
            android:text="@string/edit"
            android:textStyle="bold"
            android:textColor="#242424"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_contact_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp66"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp19"
        android:layout_marginHorizontal="@dimen/dp20"
        android:background="@drawable/bg_status_desc">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/contact_information"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center_vertical|start"
            app:autoSizeMaxTextSize="@dimen/sp15"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            android:drawableStart="@drawable/ic_edit_contact_1"
            android:layout_marginStart="@dimen/dp10"
            android:drawablePadding="@dimen/dp10"
            android:textSize="@dimen/sp15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_contact_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp36"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp20"
            android:background="@drawable/bg_nor_button"
            android:gravity="center"
            android:paddingStart="@dimen/dp32"
            android:paddingEnd="@dimen/dp32"
            android:text="@string/edit"
            android:textStyle="bold"
            android:textColor="#242424"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_receive_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp66"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginTop="@dimen/dp19"
        android:background="@drawable/bg_status_desc">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/receive_account"
            android:textColor="#333333"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="@dimen/sp15"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity="1sp"
            android:gravity="center_vertical|start"
            android:drawableStart="@drawable/ic_edit_receive_1"
            android:layout_marginStart="@dimen/dp10"
            android:drawablePadding="@dimen/dp10"
            android:textSize="@dimen/sp15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_receive_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp36"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp20"
            android:background="@drawable/bg_nor_button"
            android:gravity="center"
            android:paddingStart="@dimen/dp32"
            android:paddingEnd="@dimen/dp32"
            android:text="@string/edit"
            android:textStyle="bold"
            android:textColor="#242424"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

</LinearLayout>