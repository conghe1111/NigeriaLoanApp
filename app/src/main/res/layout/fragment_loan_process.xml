<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fl_top"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="@dimen/dp_232">

      <LinearLayout
          android:layout_width="wrap_content"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:layout_height="wrap_content">

          <androidx.appcompat.widget.AppCompatImageView
              android:layout_width="@dimen/dp_140"
              android:src="@drawable/ic_loan_process"
              android:layout_gravity="center_horizontal"
              android:layout_height="@dimen/dp_111"/>

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:textColor="#666666"
              android:text="@string/loan_in_progress"
              android:textSize="@dimen/sp_16"
              android:includeFontPadding="false"
              android:textStyle="bold"
              android:layout_marginTop="@dimen/dp_4"
              android:layout_height="wrap_content"/>

      </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/fl_top"
        android:orientation="horizontal"
        android:layout_marginTop="-40dp"
        android:layout_height="@dimen/dp_80">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginTop="@dimen/dp_17"
            android:layout_width="@dimen/dp_90"
            android:layout_marginStart="-9dp"
            android:src="@drawable/ic_loan_process_2"
            android:layout_height="@dimen/dp_60"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_verify_loan"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_width="match_parent"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            app:autoSizeMaxTextSize="@dimen/sp_14"
            app:autoSizeMinTextSize="1sp"
            app:autoSizeStepGranularity= "1sp"
            android:layout_marginEnd="@dimen/dp_4"
            android:gravity="start"
            android:includeFontPadding="false"
            android:text="@string/loan_in_progress_desc"
            android:layout_height="match_parent"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>