<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:includeFontPadding="false"
            android:text="@string/register"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_user_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_6"
            android:includeFontPadding="false"
            android:text="@string/dears_234_x"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:visibility="gone"
            android:orientation="horizontal">
<!--            android:background="@drawable/bg_gray_bg"-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ussd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/selector_tv_register_bg"
                android:gravity="center"
                android:text="@string/ussd"
                android:textColor="@drawable/selector_tv_register"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sms"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/selector_tv_register_bg"
                android:gravity="center"
                android:text="@string/sms"
                android:textColor="@drawable/selector_tv_register"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_gray_bg">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_get_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@null"
                android:hint="@string/enter_verification_code"
                android:inputType="number"
                android:lines="1"
                android:maxLength="6"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#AFAFAF"
                android:textCursorDrawable="@drawable/et_cursor_color"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:padding="@dimen/dp_5"
                android:text="@string/get_code"
                android:textColor="#40B950"
                android:textSize="@dimen/sp_14" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_gray_bg">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_set_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@null"
                android:hint="@string/set_up_digit_password"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxLength="6"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#AFAFAF"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_set_pwd_mode"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_21"
                android:layout_gravity="center|end"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_pwd_mode" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_gray_bg">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_again_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@null"
                android:hint="@string/enter_password"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxLength="6"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#AFAFAF"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_again_pwd_mode"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_21"
                android:layout_gravity="center|end"
                android:padding="@dimen/dp_5"
                android:src="@drawable/ic_pwd_mode" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sign_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_46"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_17"
            android:background="@drawable/bg_nor_button_24"
            android:gravity="center"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>

</FrameLayout>