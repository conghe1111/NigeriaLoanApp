<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:layout_height="match_parent">
<!--    android:background="@color/white"-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_120"
        android:clipChildren="false"
        android:layout_marginHorizontal="@dimen/dp_21">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_retention_top"
            android:clipChildren="false"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:layout_marginTop="-70dp"
                android:clipChildren="false"
                android:src="@drawable/ic_retention" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_113"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/dp_21"
                android:gravity="center_vertical"
                android:text="@string/are_you_high_quality_user"
                android:textColor="#333333"
                app:autoSizeMaxTextSize="@dimen/sp_14"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeStepGranularity= "1sp"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="19dp"
                android:layout_marginHorizontal="@dimen/dp_18"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_loan_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_23"
                    android:layout_marginEnd="@dimen/dp_23"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="#34473D"
                    android:textSize="@dimen/sp_14"
                    android:background="@drawable/bg_tention_cancel_10"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_loan_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dp_23"
                    android:background="@drawable/bg_green_bg_3"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="#34473D"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>