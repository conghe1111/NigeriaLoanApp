<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    app:layout_constraintDimensionRatio="w:375:253"-->
    <View
        android:id="@+id/fl_top"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio="w,253:375"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fl_container"
        android:background="@drawable/login_bg"
        android:layout_height="0dp">


    </View>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintTop_toTopOf="@id/fl_top"
        app:layout_constraintBottom_toBottomOf="@id/fl_top"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_30"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:text="@string/login_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"/>


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fl_top"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>