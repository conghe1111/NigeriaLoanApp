<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginHorizontal="@dimen/dp_22"
        android:background="@drawable/bg_white_bg">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_select_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_amount_confirm"
        android:layout_width="match_parent"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_11"
        android:textSize="@dimen/sp_17"
        android:layout_marginHorizontal="@dimen/dp_68"
        android:background="@drawable/bg_green_bg_24"
        android:layout_height="@dimen/dp_48"/>

    </LinearLayout>

</FrameLayout>
