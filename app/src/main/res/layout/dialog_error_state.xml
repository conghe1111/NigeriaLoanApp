<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:paddingHorizontal="@dimen/dp_20"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_request_permission"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:background="@drawable/shape_error_state_bg"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_state_desc"
                android:layout_width="match_parent"
                android:textSize="@dimen/sp_14"
                android:textStyle="normal"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_gravity="center_horizontal"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_80"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:text="@string/network_abnormal_please_try_again"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_22"
            android:layout_height="@dimen/dp_50">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_state_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42"
                    android:layout_gravity="center"
                    android:background="@drawable/dialog_btn_cancel"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:layout_marginStart="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_14"
                    android:textColor="#40B950"
                    android:textSize="@dimen/sp_16" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_state_open"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42"
                    android:layout_gravity="center"
                    android:background="@drawable/request_permission_comfirm"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_4"
                    android:paddingEnd="@dimen/dp_4"
                    android:text="@string/open"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_marginEnd="@dimen/dp_24"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>