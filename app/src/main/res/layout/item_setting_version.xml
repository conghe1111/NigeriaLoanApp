<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_setting_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp54"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/ll_setting_container"
        style="@style/setting_container">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_setting_left_icon"
            style="@style/setting_lef_icon"
            android:src="@drawable/ic_setting_info" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_setting_left_title"
            style="@style/setting_middle_text"
            android:text="@string/setting_information" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_setting_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_marginEnd="@dimen/dp10"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp14"
            android:text="1.0.0" />
    </LinearLayout>

</FrameLayout>
