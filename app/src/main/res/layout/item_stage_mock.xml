<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp_8"
            android:src="@drawable/shape_circle_bg"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_height="@dimen/dp_8"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/stage_x_x"
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_5"
            android:textSize="@dimen/sp_16"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_11"
        android:orientation="vertical"
        android:background="@drawable/bg_gray_bg_1"
        android:layout_marginHorizontal="@dimen/dp_22"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/repayment_date"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_loan_amount"
                android:layout_width="0dp"
                android:text="₦5,702.00"
                android:textColor="#999999"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/repayment_amount"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_interest"
                android:layout_width="0dp"
                android:text="₦5,702.00"
                android:textColor="#333333"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center_vertical|end"
                android:gravity="center_vertical|end"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>