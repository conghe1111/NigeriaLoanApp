<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp232"
    android:orientation="vertical"
    android:background="@drawable/bg_mine_top">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_marginTop="@dimen/dp24">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp38"
            android:src="@drawable/ic_launcher_round"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp20"
            android:layout_height="@dimen/dp38"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_main_top_consumer"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_gravity="end|center_vertical"
            android:padding="5dp"
            android:layout_marginEnd="@dimen/dp19"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_custom_service" />

    </FrameLayout>


</LinearLayout>