<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_232"
    android:orientation="vertical"
    android:background="@drawable/bg_mine_top">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_marginTop="@dimen/dp_24">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:text="@string/app_name"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_main_top_consumer"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="end|center_vertical"
            android:padding="5dp"
            android:layout_marginEnd="@dimen/dp_19"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_custom_service" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_top_icon_container"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
<!--        tools:visibility="visible"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_90"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"
                android:layout_height="@dimen/dp_90"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_top_name"
                android:layout_width="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                android:includeFontPadding="false"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_top_mobile"
                android:layout_width="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textSize="@dimen/sp_13"
                android:includeFontPadding="false"
                android:drawableStart="@drawable/ic_mobile"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>