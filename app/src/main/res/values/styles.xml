<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="request_permission_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dp_20</item>

    </style>

    <style name="request_permission_tv_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="request_permission_tv_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>