<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="request_permission_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/dp14</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/dp20</item>

    </style>

    <style name="request_permission_tv_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp13</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="request_permission_tv_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="setting_lef_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="setting_middle_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="setting_right_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="contact_us_right_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_item_repayment_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">@dimen/dp8</item>
        <item name="android:layout_marginStart">@dimen/dp10</item>
        <item name="android:paddingBottom">@dimen/dp8</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_item_repayment_detail_desc">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">@dimen/dp8</item>
        <item name="android:layout_marginEnd">@dimen/dp14</item>
        <item name="android:layout_marginStart">@dimen/dp10</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingBottom">@dimen/dp8</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="view_divide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/view_line_unselect</item>
    </style>
</resources>